             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/Fonts.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/ChessPieceImages.xaml" />
                
                <ResourceDictionary Source="/ResourceDictionaries/Styles/OverlayStyles.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/Styles/MainWindowStyles.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/Styles/SideMenuStyles.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/Styles/WindowLobbyStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
