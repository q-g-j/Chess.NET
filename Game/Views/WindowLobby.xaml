<Window x:Class="ChessDotNET.Views.WindowLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessDotNET.Views"
        xmlns:vm="clr-namespace:ChessDotNET.ViewModels.MainWindow"
        mc:Ignorable="d"
        Title="Lobby" Height="500" Width="500" MinHeight="500" MinWidth="500"
        UseLayoutRounding="True"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}">

    <Window.InputBindings>
        <KeyBinding Gesture="Return" Command="{Binding WindowLobbyKeyboardCommand}" CommandParameter="Enter"/>
    </Window.InputBindings>

    <Grid>
        <DataGrid
            ItemsSource="{Binding PlayerList, Mode=OneWay}"
            AutoGenerateColumns="False"
            Style="{StaticResource StyleWindowLobbyDataGrid}"
            CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <local:LobbyOverlayPlayerName Visibility="{Binding LobbyOverlayPlayerNameVisibility, FallbackValue=Visible}"/>
    </Grid>
</Window>
